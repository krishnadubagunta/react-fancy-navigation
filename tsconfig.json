{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es6",
    "lib": ["ES6", "DOM"],
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "rfn": ["./src/"]
    },
    "jsx": "react",
    "allowJs": false,
    "declaration": true, 
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "types": [
      "jest",
      "puppeteer",
      "jest-image-snapshot",
      "jest-environment-puppeteer",
      "expect-puppeteer"
    ]
  },
  "files": [
    "src/typings.d.ts"
  ],
  "exclude": ["node_modules", "dist", "examples"]
}
