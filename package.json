{
  "name": "react-fancy-navigation",
  "version": "1.0.0",
  "description": "Fancy Navigation for React",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc && rollup -c",
    "build-watch": "rollup -c --watch",
    "lint": "standard",
    "format": "prettier-standard --format",
    "test": "jest --coverage",
    "test-ci": "jest --coverage --collect-coverage --ci --reporters=default --reporters=jest-junit"
  },
  "keywords": [
    "navigation",
    "react"
  ],
  "author": "krishnadubagunta",
  "license": "ISC",
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.1",
    "@babel/preset-env": "^7.10.1",
    "@babel/preset-react": "^7.10.1",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.2.3",
    "@types/lodash-es": "^4.17.3",
    "@types/react": "^16.9.35",
    "csstype": "^2.6.10",
    "depcheck": "^0.9.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "^26.0.1",
    "jest-junit": "^10.0.0",
    "lodash-es": "^4.17.15",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-jss": "^10.1.1",
    "rollup": "^2.11.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-typescript2": "^0.27.1",
    "standard": "^14.3.4",
    "ts-jest": "^26.0.0",
    "typescript": "^3.9.3"
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test-shim.js",
      "<rootDir>/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/__tests__/*.(ts|tsx|js)"
    ]
  },
  "files": [
    "dist/"
  ],
  "standard": {
    "include": [],
    "ignore": [
      "node_modules/",
      "build/",
      "examples/"
    ],
    "globals": [
      "describe",
      "it",
      "test",
      "expect",
      "afterAll",
      "jest"
    ]
  }
}
